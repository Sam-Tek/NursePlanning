<Window x:Class="WpfNursePlanning.AppointmentList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNursePlanning"
        mc:Ignorable="d"
        Title="AppointmentList" Height="600" Width="1024" ResizeMode="NoResize">
    <Grid>
        <DataGrid Name="dgrRdv" AutoGenerateColumns="False"  HorizontalAlignment="Left" Height="429" Margin="274,57,0,0" VerticalAlignment="Top" Width="728" CanUserDeleteRows="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Path=Date, IsAsync=True}" Width="*"/>
                <DataGridTextColumn Header="Domicile" Binding="{Binding Path=AtHome, IsAsync=True}" Width="*"/>
                <DataGridTextColumn Header="Infirmier" Binding="{Binding Path=Nurse, IsAsync=True}" Width="*"/>
                <DataGridTextColumn Header="Patient" Binding="{Binding Path=Patient, IsAsync=True}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Path=Status, IsAsync=True}" Width="*"/>

            </DataGrid.Columns>

        </DataGrid>
        <Label Name="lblPatient"  HorizontalAlignment="Left" Height="32" Margin="76,510,0,0" VerticalAlignment="Top" Width="143"/>
    </Grid>
</Window>
